<?php
/**
 * Autocarga de clases.
 *
 * @param string $class_name
 */
function __autoload($class_name){
	
	$path = APP_ROOT.'/core/clases';
	$dir = opendir($path);
	while ($root_name = @readdir($dir)){
		if(file_exists(APP_ROOT.'/core/clases/'.$root_name.'/'.$class_name.'.php'))
    		require_once APP_ROOT.'/core/clases/'.$root_name.'/'.$class_name.'.php';
	} 
	
    if(file_exists(APP_ROOT.'/html/zonas/'.$class_name.'.php'))
    	 require_once(APP_ROOT.'/html/zonas/'.$class_name.'.php');
    	 
    //DEBUG:
    if($class_name == 'FB' && file_exists( APP_ROOT.'/core/clases/Common/FirePHPCore-0.3.1/lib/FirePHPCore/fb.php')){
    	require_once APP_ROOT.'/core/clases/Common/FirePHPCore-0.3.1/lib/FirePHPCore/fb.php';
    }
    
}
?>